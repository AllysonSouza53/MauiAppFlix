<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFlix.Categorias.Animacao"
             Title="Animacao">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"
              ColumnDefinitions="*,*"
              Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                         Source="coraline.jpg" x:Name="bntCoraline"
                         Clicked="bntCoraline_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
                         Source="gatodebotas2.jpg" x:Name="bntGatoDeBotas"
                         Clicked="bntGatoDeBotas_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>